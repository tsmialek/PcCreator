@model Pc
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container-md card d-flex flex-column justify-content-center mb-4 mt-5 px-5">
    <h1 class="display-5 text-center mb-4 mt-5">NAZWA ZESTAWU</h1>
    <a class="btn btn-primary mx-auto mb-4" asp-action="Index">
        <i class="fa fa-backward"></i>
        Powrót
    </a>

    <table class="table table-hover table-striped text-center">
        <thead class="table-primary">
            <tr>
                <th scope="col">Nazwa</th>
                <th scope="col">Wartość</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                if (property.Name == "Created")
                {
                    if (property.PropertyGetter(Model) is not null)
                    {
                        DateTime propertyValue = (DateTime)property.PropertyGetter(Model);
                        <tr>
                            <td>Dodano do bazy</td>
                            <td>@propertyValue.Date.ToString("dd-MM-yyyy")</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@property.DisplayName</td>
                            <td>---</td>
                        </tr>
                    }
                }

                if (property.Name != "Id" && property.Name != "ProductionDate" && property.Name != "Created")
                {
                    var propertyValue = property.PropertyGetter(Model);
                    <tr>
                        <td>@property.DisplayName</td>
                        <td>@(propertyValue is null ? "---" : propertyValue)</td>
                    </tr>
                }

                if (property.Name == "ProductionDate")
                {
                    if (property.PropertyGetter(Model) is not null)
                    {
                        DateTime propertyValue = (DateTime)property.PropertyGetter(Model);
                        <tr>
                            <td>@property.DisplayName</td>
                            <td>@propertyValue.Date.ToString("dd-MM-yyyy")</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@property.DisplayName</td>
                            <td>---</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>