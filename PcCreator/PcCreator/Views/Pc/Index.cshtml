@using PcCreator.Models;
@model List<Pc>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}

<div class="container-md card d-flex flex-column justify-content-center mb-4 mt-5 px-5">
    <h1 class="display-5 text-center mb-4 mt-5">Twoje zestawy komputerowe:</h1>
    <a class="btn btn-primary mx-auto mb-4" asp-controller="Pc" asp-action="Create">
        <i class="fa fa-plus"></i>
        Dodaj zestaw
    </a>

    <table class="table table-hover table-striped mb-5">
        @if (Model.Any())
        {
            <thead class="table-primary">
                <tr>
                    <th scope="col" class="col-2">#</th>
                    <th scope="col" class="col-3">Nazwa</th>
                    <th scope="col" class="col-3">Utworzono</th>
                    <th scope="col" class="col-4 text-center">Akcja</th>
                </tr>
            </thead>
        }
        <tbody class="align-middle">
            @{
                int rowNumber = 0;
            }
            @foreach (var item in @Model)
            {
                rowNumber++;
                <tr>
                    <td>
                        @rowNumber
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Created.Date.ToString("dd-MM-yyyy") 
                    </td>
                    <td class="text-center">
                        <a class="btn btn-secondary"
                           asp-action="Details"
                           asp-controller="Pc"
                           asp-route-id=@item.Id>
                            <i class="fa fa-info"></i>
                            Szczegóły
                        </a>
                        <a class="btn btn-secondary"
                           asp-action="Delete"
                           asp-controller="Pc"
                           asp-route-id=@item.Id>
                            <i class="fa fa-trash"></i>
                            Usuń
                        </a>
                        <a class="btn btn-secondary"
                           asp-action="Edit"
                           asp-controller="Pc"
                           asp-route-id=@item.Id>
                            <i class="fa fa-pen"></i>
                            Edytuj
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>